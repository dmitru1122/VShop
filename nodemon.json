{
  "ignore": ["test/**/*.ts", "test/**/*.spec.ts", ".git", "node_modules", "logs", "backups"],
  "watch": ["src", ".env"],
  "events": {
    "restart": "kill -9 $(lsof -t -i:5000)",
    "crash": "kill -9 $(lsof -t -i:5000)"
  },
  "delay": "3000",
  "exec": "npm run compile && node dist/index.js",
  "ext": "ts,js,json,yaml,yml"
}
